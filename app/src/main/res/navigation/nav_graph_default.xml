<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph_default"
    app:startDestination="@id/categoriesFragment">

    <fragment
        android:id="@+id/categoriesFragment"
        android:name="com.android.youtubetips.categories.view.CategoriesFragment"
        android:label="@string/youtube_tips"
        tools:layout="@layout/fragment_categories">
        <action
            android:id="@+id/action_categoriesFragment_to_categoryFragment"
            app:destination="@id/mainCategoryFragment" />
    </fragment>
    <fragment
        android:id="@+id/mainCategoryFragment"
        android:name="com.android.youtubetips.category.view.MainCategoryFragment"
        android:label="@string/youtube_channels"
        tools:layout="@layout/fragment_category_main" />

</navigation>